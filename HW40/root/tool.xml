<?xml version="1.0"?>
<run>
    <tool>
        <title>Root Calculator</title>
        <about>Press Simulate to view results.</about>
        <command>python @tool/compute_root.py @driver</command>
    </tool>
    <input>
        <string id="formula">
            <about>
                <label>f(x)</label>
                <hints>Example: 2*x + 1</hints>
            </about>
            <size>30x5</size>
	    <default>2*x+1</default>
        </string>
        <number id="min">
            <about>
		<label>From x</label>
		<description>This is the starting point.</description>
	    </about>
            <default>0</default>
        </number>
        <number id="max">
	    <about>
	  	<label>To x</label>
		<description>This is the ending point</description>
	    </about>
            <default>100</default>
        </number>
        <number id="X0">
            <about>
	        <label>X0</label>
		<description>The value of X at the root</description>
	    </about>
            <default>0</default>
        </number>
        <number id="a">
            <about>
                <label>a</label>
                <description>constant in integration-a</description>
            </about>
            <default>10</default>
        </number>
    </input>
</run>

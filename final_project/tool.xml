<?xml version="1.0"?>
<run>
    <tool>
        <title>Rotation Curve Calculator</title>
        <about>Press Simulate to view results.</about>
        <command>python @tool/roation_curve.py @driver</command>
    </tool>
    <input>
        <string id="formula">
            <about>
                <label>&#x3C1;(r)</label>
                <hints>Example: 1</hints>
            </about>
            <size>30x5</size>
	    <default>1</default>
        </string>
        <number id="min">
            <about>
		<label>From r</label>
		<description>This is the starting point.</description>
	    </about>
            <default>0</default>
        </number>
        <number id="max">
	    <about>
	  	<label>To r</label>
		<description>This is the ending point</description>
	    </about>
            <default>1</default>
        </number>
        <number id="M0">
            <about>
	        <label>M0</label>
		<description>The value of Mass at the minimum r</description>
	    </about>
            <default>0</default>
        </number>
        <number id="Npts">
            <about>
	        <label>Number of points</label>
		<description>This is the number of points at which to do the integral</description>
	    </about>
            <default>100</default>
	    <min>10</min>
        </number>
    </input>
</run>

